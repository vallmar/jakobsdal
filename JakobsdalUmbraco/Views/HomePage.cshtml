@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "~/Views/_layoutJd.cshtml";

    var header = Umbraco.Field("header");
    var bodyText = Umbraco.Field("bodyText");
}
<script src="~/JSComponents/instafeed.js-master/instafeed.min.js"></script>

<div class="row homePageContainer" ng-app="jdApp" ng-controller="homePageController">
        <div class="container no-padding-l no-padding-r">
            <div id="home" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#home" data-slide-to="0" class="active"></li>
                    <li data-target="#home" data-slide-to="1"></li>
                    <li data-target="#home" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img ng-src="{{lastThreeInstaPhotos[0].images.standard_resolution.url}}" alt="instagram">
                        <div class="carousel-caption">
                            <span>Den senaste instagrambilden</span>
                        </div>
                    </div>

                    <div class="item" style="text-align:center">
                        <img ng-src="{{lastThreeInstaPhotos[1].images.standard_resolution.url}}" alt="instagram">
                        <div class="carousel-caption">
                            <span>Den näst senaste instagrambilden</span>
                        </div>
                    </div>
 
                    <div class="item">
                        <img ng-src="{{lastThreeInstaPhotos[2].images.standard_resolution.url}}" alt="instagram" style="text-align:center">
                        <div class="carousel-caption">
                            <span>Den tredje senaste instagrambilden</span>
                        </div>
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#home" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#home" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    <div id="myInstafedd" style="display:none"></div>
        @*<div class="col-xs-12">
            <h4>En film om vår historia</h4>
        </div>*@
    <div class="video-container">
        <iframe width="530" height="315" src="https://www.youtube.com/embed/hVIphm3PAhw" frameborder="0" allowfullscreen></iframe>
    </div>
</div>


